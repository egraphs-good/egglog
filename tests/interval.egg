(datatype Math
  (Num rational)
  (Var String)
  (Mul Math Math))

(function hi (Math) rational :merge (min old new))
(function lo (Math) rational :merge (max old new))

(rule ((= mul (Mul a b)))
      ((set (lo mul) 
          (min (min (* (lo a) (lo b)) (* (lo a) (hi b)))
               (min (* (hi a) (lo b)) (* (hi a) (hi b)))))))

(define x (Var "x"))
(define e (Mul x x))

(set (lo x) -10//1)
(set (hi x)  10//1)

(run 1)

(check (= (lo e) -100//1))

(rule ((= mul (Mul a a)))
      ((set (lo mul) (* (lo a) (lo a)))))

(run 1)
(check (= (lo e) 100//1))
