(rule ((= x 1) (= y x) (= z y)) ())

(function f (i64) i64)

(set (f 0) 0)

;; a funky id rule
(rule ((f x) (= x y) (= z y)) ((let a (f z)) (set (f (+ z 1)) (+ a 1))))

(run 20)

