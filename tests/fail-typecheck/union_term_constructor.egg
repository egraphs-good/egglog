; Test that union fails on sorts marked with :nounion
; The :nounion annotation marks a sort as non-unionable

(sort TermSort :nounion)
(constructor term-fn (i64 i64) TermSort)

(term-fn 1 2)
(term-fn 3 4)

; This should fail - cannot union values of a non-unionable sort
(union (term-fn 1 2) (term-fn 3 4))
