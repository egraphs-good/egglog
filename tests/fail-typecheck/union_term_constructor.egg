; Test that union fails on constructors marked with :term
; The :term annotation marks a constructor's output sort as non-unionable

(sort TermSort)
(constructor term-fn (i64 i64) TermSort :term)

(term-fn 1 2)
(term-fn 3 4)

; This should fail - cannot union values of a non-unionable sort
(union (term-fn 1 2) (term-fn 3 4))
